<form action="" method="POST" class="col-sm-9 col-sm-offset-1 form-horizontal page-form">
    {% if isError or isSuccess %}
        {% include 'Components/_message.twig' %}
    {% endif %}
    <input type="hidden" value="{{ csrf_token }}" name="{{ csrf_key }}">
    <div class="form-box">
        <div class="form-group">
            <label for="account_id" class="col-sm-4">MyHotForex ID</label>
            <div class="col-sm-8">
                <input type="text" id="account_id" name="account_id" class="form-control" value="{{ account_id }}">
            </div>
        </div>
        <div class="form-group">
            <label for="mt4_account" class="col-sm-4">No Akun Trading</label>
            <div class="col-sm-8">
                <input type="text" id="mt4_account" name="mt4_account" class="form-control" value="{{ mt4_account }}">
            </div>
        </div>
        <div class="form-group">
            <label for="captcha" class="col-sm-12 text-center">Ketik ulang teks berikut</label>
            <div class="col-sm-8 col-sm-offset-2 captcha-img">
                <img src="{{ captcha.inline() }}" class="center-block" alt="">
            </div>
            <div class="col-sm-8 col-sm-offset-2">
                <input type="text" id="captcha" name="captcha" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-3">
                <button type="submit" class="btn btn-primary btn-block">
                    Kirim
                </button>
            </div>
        </div>
    </div>
</form>
