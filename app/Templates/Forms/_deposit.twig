<form action="" method="post" class="col-sm-9 col-sm-offset-1 form-horizontal page-form" enctype="multipart/form-data">
	{% if isError or isSuccess %}
		{% include 'Components/_message.twig' %}
	{% endif %}
	<input type="hidden" value="{{ csrf_token }}" name="{{ csrf_key }}">
	<div class="form-box">
		<div class="form-group">
			<label for="account_id" class="col-sm-4">MyHotForex ID</label>
			<div class="col-sm-8">
				<input type="text" id="account_id" name="account_id" class="form-control" value="{{ account_id }}">
			</div>
		</div>
		<div class="form-group">
			<label for="amount_usd" class="col-sm-4">Jumlah Deposit (USD)</label>
			<div class="col-sm-8">
				<input type="text" id="amount_usd" name="amount_usd" class="form-control" value="{{ amount_usd }}">
			</div>
		</div>
		<div class="form-group">
			<label for="amount_idr" class="col-sm-4">Total Transfer (IDR)</label>
			<div class="col-sm-8">
				<input type="text" id="amount_idr" name="amount_idr" class="form-control" value="{{ amount_idr }}">
			</div>
		</div>
		<div class="form-group">
			<label for="to_bank" class="col-sm-4">Transfer Ke</label>
			<div class="col-sm-8">
				<select name="to_bank" id="to_bank" class="form-control">
					<option value="BCA">BCA</option>
					<option value="MANDIRI">Mandiri</option>
					<option value="BNI">BNI</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="captcha" class="col-sm-12 text-center">Ketik ulang teks berikut</label>
			<div class="col-sm-8 col-sm-offset-2 captcha-img">
				<img src="{{ captcha.inline() }}" class="center-block" alt="">
			</div>
			<div class="col-sm-8 col-sm-offset-2">
				<input type="text" id="captcha" name="captcha" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-6 col-sm-offset-3">
				<button type="submit" class="btn btn-primary btn-block">
					Kirim
				</button>
			</div>
		</div>
	</div>
</form>
