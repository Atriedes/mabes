{% if isError or isSuccess %}
	{% include 'Components/_message.twig' %}
{% endif %}
<form action="#" class="col-sm-9 col-sm-offset-1 form-horizontal page-form">
	<input type="hidden" value="{{ csrf_token }}" name="{{ csrf_key }}">
	<div class="form-box">
		<div class="form-group">
			<label for="transferAmount" class="col-sm-4">Jumlah Transfer</label>
			<div class="col-sm-8">
				<input type="text" id="transferAmount" name="amount" class="form-control" value="{{ amount }}">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-12 text-center">
				<h4>Transfer Dari</h4>
			</div>
		</div>
		<div class="form-group">
			<label for="accNumber" class="col-sm-4">Nomor Login MabesForex</label>
			<div class="col-sm-8">
				<input type="text" id="login_from" name="login_from" class="form-control" value="{{ login_from }}">
			</div>
		</div>
		<div class="form-group">
			<label for="accName" class="col-sm-4">Nama Akun MabesForex</label>
			<div class="col-sm-8">
				<input type="text" id="from_name" name="from_name" class="form-control" value="{{ from_name }}">
			</div>
		</div>
		<div class="form-group">
			<label for="phonePassword" class="col-sm-4">Phone Password</label>
			<div class="col-sm-8">
				<input type="text" id="phone_password" name="phone_password" class="form-control" value="{{ phone_password }}">
			</div>
		</div>
		<div class="form-group">
			<label for="email" class="col-sm-4">E-Mail</label>
			<div class="col-sm-8">
				<input type="text" id="email" name="email" class="form-control" value="{{ email }}">
			</div>
		</div>
		<div class="form-group">
			<label for="phoneNumber" class="col-sm-4">Nomor Handphone (ex. 081654453432)</label>
			<div class="col-sm-8">
				<input type="text" id="phone" name="phone" class="form-control" value="{{ phone }}">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-12 text-center">
				<h4>Transfer Ke</h4>
			</div>
		</div>
		<div class="form-group">
			<label for="accNumber" class="col-sm-4">Nomor Login MabesForex</label>
			<div class="col-sm-8">
				<input type="text" id="to_login" name="to_login" class="form-control" value="{{ to_login }}">
			</div>
		</div>
		<div class="form-group">
			<label for="accName" class="col-sm-4">Nama Akun MabesForex</label>
			<div class="col-sm-8">
				<input type="text" id="to_name" name="to_name" class="form-control" value="{{ to_name }}">
			</div>
		</div>
		<div class="form-group">
			<label for="captcha" class="col-sm-12 text-center">Ketik ulang teks berikut</label>
			<div class="col-sm-8 col-sm-offset-2 captcha-img">
                <img src="{{ captcha.inline() }}" class="center-block" alt="">
			</div>
			<div class="col-sm-8 col-sm-offset-2">
				<input type="text" id="captcha" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-6 col-sm-offset-3">
				<button type="submit" class="btn btn-primary btn-block">
					Kirim
				</button>
			</div>
		</div>
	</div>
</form>
