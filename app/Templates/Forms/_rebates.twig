{% if isError or isSuccess %}
	{% include 'Components/_message.twig' %}
{% endif %}
<form action="#" class="col-sm-7 col-sm-offset-2 form-horizontal page-form">
	<input type="hidden" value="{{ csrf_token }}" name="{{ csrf_key }}">
	<div class="form-box">
		<div class="form-group">
			<label for="loginNumber" class="col-sm-4">Nomor Login MabesForex</label>
			<div class="col-sm-8">
				<input type="text" id="loginNumber" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<label for="periode" class="col-sm-4">Periode</label>
			<div class="col-sm-8">
				<label for="periode1" class="radio-inline">
					<input type="radio" id="periode1" name="periode" value="1"> Minggu Ini
				</label>
				<label for="periode2" class="radio-inline">
					<input type="radio" id="periode2" name="periode" value="2"> Minggu Lalu
				</label>
			</div>
		</div>
		<div class="form-group">
			<label for="captcha" class="col-sm-12 text-center">Ketik ulang teks berikut</label>
			<div class="col-sm-8 col-sm-offset-2 captcha-img">
				<img src="http://placehold.it/128x80" class="center-block" alt="">
			</div>
			<div class="col-sm-8 col-sm-offset-2">
				<input type="text" id="captcha" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-6 col-sm-offset-3">
				<button type="submit" class="btn btn-primary btn-block">
					Cek
				</button>
			</div>
		</div>
	</div>
</form>
