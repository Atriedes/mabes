{% extends 'base.twig' %}

{% block pagetitle %}Administrator{% endblock %}

{% set adminTemplate = true %}
{% set withoutHeader = true %}
{% set withoutFooter = true %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Withdrawal - {{ withdrawal|length }} Request(s)</div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" data-render-table>
                            <thead>
                            <tr>
                                <td valign="middle" class="text-center">ID</td>
                                <td valign="middle" class="text-center">Jumlah (USD)</td>
                                <td valign="middle" class="text-center">MyHotForexId</td>
                                <td valign="middle" class="text-center">Detail Bank</td>
                                <td valign="middle" class="text-center">Kontak</td>
                                <td valign="middle" class="text-center" width="150px">Action</td>
                            </tr>
                            </thead>
                            {% for item in withdrawal %}
                                <tr>
                                    <td valign="middle" class="text-center">
                                        <span class="ticketID"><strong>{{ item.getWithdrawalId() }}</strong></span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="date">{{ item.getCreatedAt.format("Y-m-d") }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="amount">USD {{ item.getAmount() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="accNumber">{{ item.getClient().getAccountId() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="accNumber">{{ item.getClient().getAccountNumber() }} - {{ item.getClient.getBankName() }}</span>
                                        <br>
                                        <span class="accName">a/n {{ item.getClient().getFullname() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="email">{{ item.getClient().getEmail() }}</span>
                                        <br>
                                        <span class="phone">{{ item.getClient().getPhone() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <div class="btn-group btn-group-justified btn-group-xs">
                                            <a href="{{ base_url }}administrator/withdrawal/done/{{ item.getWithdrawalId() }}" class="btn btn-primary">Set Done</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
