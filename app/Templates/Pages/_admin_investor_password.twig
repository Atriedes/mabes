{% extends 'base.twig' %}

{% block pagetitle %}Administrator - Investor Password{% endblock %}

{% set adminTemplate = true %}
{% set withoutHeader = true %}
{% set withoutFooter = true %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Investor Password - {{ investor_password|length }}</div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" data-render-table>
                            <thead>
                            <tr>
                                <td valign="middle" class="text-center">MyHotForexId</td>
                                <td valign="middle" class="text-center">Trading Account</td>
                                <td valign="middle" class="text-center">Investor Password</td>
                                <td valign="middle" class="text-center">Kontak</td>
                            </tr>
                            </thead>
                            {% for item in investor_password %}
                                <tr>
                                    <td valign="middle" class="text-center">
                                        <span class="ticketID"><strong>{{ item.getAccountId().getAccountId() }}</strong></span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="amount">{{ item.getMtAccount() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="accNumber">{{ item.getInvestorPassword() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="email">{{ item.getAccountId().getFullname() }}</span>
                                        <br>
                                        <span class="email">{{ item.getAccountId().getEmail() }}</span>
                                        <br>
                                        <span class="phone">{{ item.getAccountId().getPhone() }}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
