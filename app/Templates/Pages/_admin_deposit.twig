{% extends 'base.twig' %}

{% block pagetitle %}Administrator - Deposit{% endblock %}

{% set adminTemplate = true %}
{% set withoutHeader = true %}
{% set withoutFooter = true %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Deposits - {{ deposits|length }} Request(s)</div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" data-render-table>
                            <thead>
                            <tr>
                                <td valign="middle" class="text-center">ID</td>
                                <td valign="middle" class="text-center">Jumlah (IDR)</td>
                                <td valign="middle" class="text-center">MyHotForexId</td>
                                <td valign="middle" class="text-center">Transfer Ke</td>
                                <td valign="middle" class="text-center">Kontak</td>
                                <td valign="middle" class="text-center" width="150px">Action</td>
                            </tr>
                            </thead>
                            {% for item in deposits %}
                                <tr>
                                    <td valign="middle" class="text-center">
                                        <span class="ticketID"><strong>{{ item.getDepositId() }}</strong></span>
                                        <br />
                                        <span class="date">{{ item.getCreatedAt.format("Y-m-d H:i:s") }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="amount">{{ item.getAmountIdr()|number_format }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="accNumber">{{ item.getClient().getAccountId() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="accName">{{ item.getToBank() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <span class="email">{{ item.getClient().getEmail() }}</span>
                                        <br>
                                        <span class="phone">{{ item.getClient().getPhone() }}</span>
                                    </td>
                                    <td valign="middle" class="text-center">
                                        <div class="btn-group btn-group-justified btn-group-xs">
                                            <a href="{{ base_url }}administrator/deposits/done/{{ item.getDepositId() }}" class="btn btn-primary">Set Done</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
